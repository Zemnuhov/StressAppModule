<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tonic_graph_host">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/tonic_graph_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/tonic_swap_button"
        android:layout_width="@dimen/routed_button_size"
        android:layout_height="@dimen/routed_button_size"
        android:layout_gravity="end"
        android:layout_margin="25dp"
        android:contentDescription="@string/swap_item"
        android:src="@drawable/ic_baseline_swap_horizontal_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>